<%- include ("../../partials/head.ejs") %>

        <div class="custom-fullheight">
                <div class="d-lg-flex min-h-full">
                        <%- include ("../../partials/admin-side-menu.ejs",{activeLink:40}) %>
                                <div class="w-100 superadmin-rightsection p-5 mob-p">
